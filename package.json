{
  "name": "email-templates",
  "version": "1.0.0",
  "description": "ueno. email templates",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && run-p watch-emails watch-sass watch-assets server",
    "build": "run-s clean compile-emails sass assets inline",
    "watch-emails": "onchange 'src/**/*.{hbs,yml,js}' -i -- npm run compile-emails",
    "compile-emails": "run-s compile-emails:compile compile-emails:inky",
    "compile-emails:compile": "panini src build",
    "compile-emails:inky": "inky build/*.html build",
    "watch-assets": "onchange 'src/assets/**/*' -i -- npm run assets",
    "assets": "cpy '**/*.*' '../../build' --cwd=src/assets --parents",
    "sass": "node-sass --include-path=. -o=build src/styles",
    "watch-sass": "npm run sass && npm run sass -- --watch",
    "inline": "scow build/**/*.html dist",
    "clean": "rimraf build && mkdir build",
    "server": "cd build && lite-server",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ueno-llc/email-templates.git"
  },
  "keywords": [
    "ueno",
    "email"
  ],
  "author": "ueno. <hi@ueno.co> (http://ueno.co)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ueno-llc/email-templates/issues"
  },
  "homepage": "https://github.com/ueno-llc/email-templates#readme",
  "devDependencies": {
    "cpy-cli": "^1.0.1",
    "inky-cli": "^1.0.1",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "panini": "^2.0.0-alpha.2",
    "pug": "^2.0.0-rc.1",
    "rimraf": "^2.6.1",
    "scow": "^2.0.0"
  },
  "dependencies": {
    "foundation-emails": "^2.2.1"
  }
}
