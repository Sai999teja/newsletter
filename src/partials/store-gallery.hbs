{{#*inline 'store-item'}}
  <a class="store-item" href="{{link}}">
    <img src="images/{{image}}.jpg" width="240">
    <spacer size="20">
    <p class="title">{{type}}</p>
    <p class="subtitle">Posted by {{posted_by}}</p>
    <spacer size="60">
  </a>
{{/inline}}

<row class="store-gallery">
  <columns small="6">
    {{#each (slice items 0 split)}}
      {{> store-item this}}
    {{/each}}
  </columns>
  <columns small="6">
    {{#each (slice items split)}}
      {{> store-item this}}
    {{/each}}
  </columns>
</row>
